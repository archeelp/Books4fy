<% include partials/header %>
<style>
    #button {
        text-align: center;
    }
    input[type="checkbox"] {
        margin-right: 5px;
        margin-top: 5px;
    }
    .pding {
        padding-left: 50px;
    }
    input[type="number"] {
        width: 50px;
    }
    .submitButton {
        height: 40px;
        background: #0062ff;
        border: none;
        color: white;
        border-radius: 18px;
        font-weight: bold;
        font-size: 125%;
    }
    .notVisible {
        display: none;
    }
    .textarea {
        width: 100%;
        height: 125px;
        font-size: 2.0rem;
        text-align: left;
        padding: 5px;
    }
    #lbl {
        margin-top: 1%;
        font-size: 150%;
    }
</style>
<div class="container">
    <div class="row">
        <h1 style="text-align: center"><u>Book Details</u></h1>
        <div style="width: 70%; margin: 25px auto;">
                <legend>Add a brief description</legend>
            <form id="form" action="/adddetails" method="POST">
                <div class="form-group">
                    <textarea class="textarea" form="form" class="form-control" name="description" placeholder="Description" required></textarea>
                </div>
                <fieldset>
                    <legend>Enter books selling price </legend>
                    <div class="form-wrapper">
                            <input id="pw2" type="text" class="form-control" name="bookprice" placeholder="Price" required >
                        </div>
                </fieldset>
                <div style="text-align: center">
                    <button style="width: 20%" class="submitButton">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>
